{
  "identifier": "default",
  "description": "Default capabilities for TimerShift.",
  "webviews": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:path:default",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA/**"
        }
      ]
    }
  ]
}
